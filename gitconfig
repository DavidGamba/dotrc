[core]
    pager = less -FRX
    editor = vim
    excludesfile = ~/.gitignore

[color]
    ui = auto

[pull]
    rebase = true

[merge]
    tool = vimdiff

[diff]
  noprefix = true

[alias]
    lg = log --pretty=tformat:'%C(yellow)%h %Creset %Cred%s%Creset %Cgreen%d%Creset %Cgreen(%cr, %an)%Creset %n%b' --no-prefix
    st = status --short
    ds = diff --staged
    d  = diff --no-prefix --relative
    amend = commit --amend
    co = checkout
    ci = commit


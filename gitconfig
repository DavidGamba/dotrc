#    email =

[core]
    pager = less -FRX
    editor = vim
    excludesfile = ~/.gitignore
    whitespace=-indent-with-non-tab,trailing-space,cr-at-eol,tab-in-indent

[color]
    ui = auto
    diff = auto

[color "diff"]
    whitespace = red reverse

[pull]
    rebase = true

[merge]
    tool = vimdiff

[diff]
  noprefix = true

[alias]
    lg = log --pretty=tformat:'%C(yellow)%h %Creset %Cred%s%Creset %Cgreen%d%Creset %Cgreen(%cr, %an)%Creset %n%b' --no-prefix
    st = status --short
    ds = diff --staged
    d  = diff --no-prefix --relative
    wd = diff --no-prefix --relative --color-words
    dw = diff --no-prefix --relative --color-words
    amend = commit --amend
    co = checkout
    ci = commit

[help]
#    autocorrect = 1

